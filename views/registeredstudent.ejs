    <script>
        // Function to handle the Add button click event
        function addUser(userId) {
            // Fetch user data by ID (in a real scenario, you might want to fetch this from the server)
            const user = users.find(user => user.id === userId); // Assuming users is an array containing all users
    
            if (user) {
                // Create a new table row
                const newRow = document.createElement('tr');
    
                // Add data for each column
                newRow.innerHTML = `
                    <td>${user.id}</td>
                    <td>${user.fullname}</td>
                    <td>${user.email || 'N/A'}</td>
                    <td>${user.number}</td>
                    <td>${user.course}</td>
                `;
    
                // Append the new row to the second table's body
                document.getElementById('addedUsersTableBody').appendChild(newRow);
    
                alert(`User with ID: ${userId} added to the table.`);
            } else {
                alert("User not found.");
            }
        }
    
        // Example user data (in a real application, this would come from your server or backend)
        const users = [
